<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="template" client="site" method="upgrade"> 
	<name>bootstrapxtc</name>
	<creationDate>2011-12-30</creationDate>
	<author>JoomlaXTC</author>
	<authorUrl>http://www.joomlaxtc.com</authorUrl>
	<copyright>Copyright (c) 2011-2012 Monev Software LLC.  All Rights Reserved</copyright>
	<license>Dual GNU/GPL and Commercial</license>
	<version>1.0.3</version>
	<description>JoomlaXTC Responsive template</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>params.ini</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_thumbnail.png</filename>
		<folder>XTC</folder>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>layouts</folder>
		<folder>language</folder>
		<folder>parameters</folder>
	</files>
	<positions>
	    <position>top</position>
		<position>menubar</position>
		<position>search</position>
		<position>footer</position>
		<position>legals</position>
		<position>inset</position>
		<position>left2</position>
		<position>right2</position>
		<position>user1</position>
		<position>user2</position> 
		<position>user3</position>
		<position>user4</position>
		<position>user5</position>
		<position>left</position>
		<position>right</position>
		<position>newsflash</position>
		<position>breadcrumbs</position>
		<position>left4</position>
		<position>right4</position>
		<position>banner</position>
		<position>user11</position> 
		<position>user12</position>
		<position>user13</position>
		<position>user14</position>
		<position>user15</position>
		<position>user16</position>
		<position>bottom1</position>
		<position>bottom2</position>
		<position>bottom3</position>
		<position>bottom4</position>
		<position>bottom5</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB.tpl_bootstrapxtc.ini</language>
		<language tag="en-GB">en-GB.tpl_bootstrapxtc.sys.ini</language>
	</languages>
  <config>
	  <fields name="params" addfieldpath="/templates/bootstrapxtc/XTC/elements">
			<fieldset name="basic">
				<field name="templateLayout" type="layoutlist" default="default" label="Default Layout" description="Select a default template layout" />
        <field name="mobiledetect" type="radio" default="1" label="Mobile Device Detection" description="Enables automatic layout change for mobile devices.">
          <option value="1">Enabled</option>
          <option value="0">Disabled</option>
        </field>
        <field name="css3fx" type="radio" default="1" label="Enable CSS3 effects" description="Enables CSS3 special effects.">
          <option value="1">Enabled</option>
          <option value="0">Disabled</option>
        </field>
			</fieldset>
			<fieldset name="layouts" label="TPL_JXTC_LAYOUTS_LABEL">
				<field type="layoutgroups" label="Layout Parameters"/>
			</fieldset>
			<fieldset name="grids" label="TPL_JXTC_GRIDS_LABEL">
				<field type="stylegroups" group="grid" label="Grid Parameters"/>
			</fieldset>
			<fieldset name="styles" label="TPL_JXTC_STYLES_LABEL">
				<field type="stylegroups" group="style" label="Colors &amp; Graphics"/>
			</fieldset>
			<fieldset name="typos" label="TPL_JXTC_TYPOS_LABEL">
				<field type="stylegroups" group="typo" label="Typography Parameters"/>
			</fieldset>
			<fieldset name="advanced">
				<field type="xtcparameters" label="System Parameters" description="System parameters for the template framework" />
			</fieldset>
		</fields>
	</config>
</extension>
